<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Personal_prod_2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Personal_prod_2" parent="Theme.Personal_prod_2"/>

    <style name="Theme.Personal_prod_2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <!-- 青 -->
    <style name="ThemeOverlay.Personal_prod_2.Dialog.blue" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/bluelight</item>
        <item name="android:background">@color/bluedark</item>
    </style>

    <!-- 緑 -->
    <style name="ThemeOverlay.Personal_prod_2.Dialog.green" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/greenlight</item>
        <item name="android:background">@color/greendark</item>
    </style>

    <!-- 黄 -->
    <style name="ThemeOverlay.Personal_prod_2.Dialog.yellow" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/orangelight</item>
        <item name="android:background">@color/orangedark</item>
    </style>

    <!-- 赤 -->
    <style name="ThemeOverlay.Personal_prod_2.Dialog.red" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorPrimary">@color/redlight</item>
        <item name="android:background">@color/reddark</item>
    </style>



    <style name="Personal_prod_2.blue">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/bluedark</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSurface">#505021</item>
    </style>

    <style name="Theme.Personal_prod_2.green">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/greendark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>